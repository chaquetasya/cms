{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "collector": {
      "type": "enumeration",
      "enum": [
        "MERCADOPAGO",
        "OTHER"
      ],
      "default": "MERCADOPAGO",
      "required": true
    },
    "preference": {
      "type": "uid"
    },
    "shipping": {
      "type": "component",
      "repeatable": false,
      "component": "order.shipping",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "COP",
        "USD"
      ],
      "default": "COP",
      "required": true
    },
    "total": {
      "type": "float",
      "min": 0,
      "required": true,
      "default": 0
    },
    "metadata": {
      "type": "json",
      "private": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "CONFIRMED",
        "DELIVERY",
        "COMPLETED",
        "CANCELED"
      ],
      "default": "PENDING",
      "required": true
    },
    "note": {
      "type": "text",
      "private": true
    },
    "invoice": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "courier": {
      "type": "component",
      "repeatable": false,
      "component": "order.courier"
    },
    "cart": {
      "displayName": "cart",
      "type": "component",
      "repeatable": true,
      "component": "order.cart",
      "required": true,
      "min": 1
    },
    "paymentURL": {
      "type": "text",
      "required": false
    }
  }
}
